{
  "name": "refity-frontend",
  "version": "1.0.0",
  "description": "Refity Docker Registry Frontend",
  "scripts": {
    "build": "postcss src/css/input.css -o static/css/output.css",
    "watch": "postcss src/css/input.css -o static/css/output.css --watch",
    "dev": "postcss src/css/input.css -o static/css/output.css --watch",
    "lint:css": "stylelint src/css/**/*.css",
    "lint:css:fix": "stylelint src/css/**/*.css --fix"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "stylelint": "^15.11.0",
    "stylelint-config-standard": "^34.0.0",
    "tailwindcss": "^3.4.0"
  }
}
